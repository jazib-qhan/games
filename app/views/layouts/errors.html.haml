!!!
%html
  %head
    %title= content_for?(:title) ? yield(:title) : "#{params[:action]} | emPower"
    %meta{ name: "viewport", content: "width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0" }
    %meta{ :content => content_for?(:description) ? yield(:description) : "emPower", :name => "description" }
    = render '/layouts/favicon'
    %link{ :href => "https://fonts.googleapis.com/css?family=Open+Sans:400italic,400,600,300,700", :rel => "stylesheet", :type => "text/css" }
    /[if lt IE 9]
      %script{:src => "assets/javascripts/ie/html5shiv.js", :type => "text/javascript"}
      %script{:src => "assets/javascripts/ie/respond.min.js", :type => "text/javascript"}
    = stylesheet_link_tag :application, :media => "all"
    = javascript_include_tag :application
    = csrf_meta_tags
    = yield(:head)

  %body(class="contrast-red error contrast-background")
    #wrapper
      - flash.each do |key, value|
        - unless params[:controller] == "notifications"
          %div.site-alert{:class => "alert alert-#{key}"}
            %a.close{"data-dismiss" => "alert", :href => "#"}
              Ã—
            %i.icon-remove-sign
            = value

      .middle-container
        = yield

    = render "/layouts/footer"
